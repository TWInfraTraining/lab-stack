                    ]]}
                },
                "Tags" : [{
                    "Key" : "Name",
                    "Value" : {
                        "Ref" : "Email"
                    }
                }]
            }
        }
    },
    "Outputs" : {
        "ManualWeb" : {
            "Value" : { "Ref" : "ManualWeb" }
        },
        "ManualDB" : {
