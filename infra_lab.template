                }],
                "UserData" : { "Fn::Base64" :
                    { "Fn::Join" : ["\n", [
                        "#!/bin/sh",
                        "",
                        "wget http://thoughtworksinc.github.com/InfraTraining/files/setup_node.sh && bash setup_node.sh"
                    ]]}
                },
                "Tags" : [{
                    "Key" : "Name",
                    "Value" : {
                        "Ref" : "Email"
                    }
                }]
            }
        },
        "Monitoring" : {
            "Type" : "AWS::EC2::Instance",
            "Properties" : {
                "InstanceType" : "t1.micro",
                "KeyName" : { "Ref" : "KeyName" },
                "ImageId" : { "Fn::FindInMap" : [ "EbsBootAMIByRegion", { "Ref" : "AWS::Region" }, "AMI" ]},
                "SecurityGroups" : [{
                    "Ref" : "MonitorSG"
                }],
                "UserData" : { "Fn::Base64" :
                    { "Fn::Join" : ["\n", [
                        "#!/bin/sh",
                        "",
                        "wget http://thoughtworksinc.github.com/InfraTraining/files/setup_node.sh && bash setup_node.sh"
                    ]]}
