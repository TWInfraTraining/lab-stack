        "PuppetWeb" : {
            "Type" : "AWS::EC2::Instance",
            "Properties" : {
                "InstanceType" : "t1.micro",
                "KeyName" : { "Ref" : "KeyName" },
                "ImageId" : { "Fn::FindInMap" : [ "EbsBootAMIByRegion", { "Ref" : "AWS::Region" }, "AMI" ]},
                "SecurityGroups" : [{
                    "Ref" : "WebSG"
                }],
                "UserData" : { "Fn::Base64" :
                    { "Fn::Join" : ["\n", [
                        "#!/bin/sh",
                        "",
                        "wget http://thoughtworksinc.github.com/InfraTraining/files/setup_node.sh && bash setup_node.sh"
                    ]]}
                },
                "Tags" : [{
                    "Key" : "Name",
                    "Value" : {
                        "Ref" : "Email"
                    }
                }]
            }
        },
        "PuppetDB" : {
            "Type" : "AWS::EC2::Instance",
            "Properties" : {
                "InstanceType" : "t1.micro",
                "KeyName" : { "Ref" : "KeyName" },
                "ImageId" : { "Fn::FindInMap" : [ "EbsBootAMIByRegion", { "Ref" : "AWS::Region" }, "AMI" ]},
                "SecurityGroups" : [{
                    "Ref" : "DBSG"
                }],
                "UserData" : { "Fn::Base64" :
                    { "Fn::Join" : ["\n", [
                        "#!/bin/sh",
                        "",
                        "wget http://thoughtworksinc.github.com/InfraTraining/files/setup_node.sh && bash setup_node.sh"
                    ]]}
                },
                "Tags" : [{
                    "Key" : "Name",
                    "Value" : {
                        "Ref" : "Email"
                    }
                }]
            }
        },
        "GoServer" : {
            "Type" : "AWS::EC2::Instance",
            "Properties" : {
                "InstanceType" : "m1.small",
                "KeyName" : { "Ref" : "KeyName" },
                "ImageId" : { "Fn::FindInMap" : [ "EbsBootAMIByRegion", { "Ref" : "AWS::Region" }, "AMI" ]},
                "SecurityGroups" : [{
                    "Ref" : "GoServerSG"
                }],
                "UserData" : { "Fn::Base64" :
                    { "Fn::Join" : ["\n", [
                        "#!/bin/sh",
